---
// src/components/section/Contact.astro
import { sanityClient } from '@/lib/sanity';

export interface Props {
  lang: 'id' | 'en';
}
const { lang } = Astro.props;

// --- Data Fetching ---
let sectionData: any = null;

try {
  sectionData = await sanityClient.fetch(`*[_type == "contactSection"][0]`);
} catch (error) {
  console.error('Sanity Contact Fetch Error:', error);
}

// --- Localize Static Text ---
const headline =
  sectionData?.headline?.[lang] ||
  (lang === 'id' ? 'Mari Mulai Proyek Anda' : "Let's Start Your Project");
const subheadline =
  sectionData?.subheadline?.[lang] ||
  (lang === 'id'
    ? 'Punya ide brilian? Hubungi kami sekarang dan mari wujudkan bersama-sama.'
    : "Have a brilliant idea? Reach out to us today and let's make it happen together.");

// --- Email Config ---
const email = sectionData?.emailAddress || 'hello@agency.com';
const emailLabel =
  sectionData?.emailLabel?.[lang] ||
  (lang === 'id' ? 'Kirim Email' : 'Send an Email');
const emailLink = `mailto:${email}`;

// --- WhatsApp Config ---
const waNumber = sectionData?.whatsappNumber || '6281234567890';
const waLabel =
  sectionData?.whatsappLabel?.[lang] ||
  (lang === 'id' ? 'Chat via WhatsApp' : 'Chat on WhatsApp');
const waMsg =
  sectionData?.whatsappMessage?.[lang] ||
  (lang === 'id'
    ? 'Halo, saya tertarik untuk bekerja sama!'
    : "Hello, I'm interested in working together!");
const waLink = `https://wa.me/${waNumber}?text=${encodeURIComponent(waMsg)}`;
---

<section
  id='contact'
  class='py-20 md:py-32 bg-white relative overflow-hidden'>
  <div class='container mx-auto px-4 max-w-5xl relative z-10'>
    {/* Header Minimalis */}
    <div class='text-center max-w-2xl mx-auto mb-16 md:mb-20'>
      <h2
        class='text-4xl md:text-5xl lg:text-6xl font-extrabold text-slate-900 tracking-tight leading-tight mb-6'>
        {headline}
      </h2>
      <p
        class='text-lg md:text-xl text-slate-500 leading-relaxed whitespace-pre-line'>
        {subheadline}
      </p>
    </div>

    {/* Grid Kartu Kontak */}
    <div class='grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8'>
      {/* --- KARTU WHATSAPP --- */}
      <a
        href={waLink}
        target='_blank'
        rel='noopener noreferrer'
        class='group block'>
        <div
          class='bg-slate-50 border border-slate-100 rounded-[2rem] p-10 md:p-12 text-center transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_20px_40px_-15px_rgba(37,99,235,0.15)] hover:border-blue-100 flex flex-col items-center justify-center h-full'>
          <div
            class='w-20 h-20 mb-8 rounded-full bg-green-100 text-green-600 flex items-center justify-center group-hover:scale-110 group-hover:bg-green-500 group-hover:text-white transition-all duration-300'>
            {/* SVG WhatsApp */}
            <svg
              viewBox='0 0 24 24'
              width='32'
              height='32'
              fill='currentColor'>
              <path
                d='M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z'
              ></path>
            </svg>
          </div>

          <h3 class='text-2xl font-bold text-slate-900 mb-2'>{waLabel}</h3>
          <p class='text-slate-500 font-medium'>Fast response</p>
        </div>
      </a>

      {/* --- KARTU EMAIL --- */}
      <a
        href={emailLink}
        class='group block'>
        <div
          class='bg-slate-900 border border-slate-800 rounded-[2rem] p-10 md:p-12 text-center transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.5)] flex flex-col items-center justify-center h-full'>
          <div
            class='w-20 h-20 mb-8 rounded-full bg-slate-800 text-slate-300 flex items-center justify-center group-hover:scale-110 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300'>
            {/* SVG Email */}
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='32'
              height='32'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'>
              <rect
                width='20'
                height='16'
                x='2'
                y='4'
                rx='2'
              ></rect>
              <path d='m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7'></path>
            </svg>
          </div>

          <h3 class='text-2xl font-bold text-white mb-2'>{emailLabel}</h3>
          <p class='text-slate-400 font-medium'>{email}</p>
        </div>
      </a>
    </div>
  </div>
</section>
