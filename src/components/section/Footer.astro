---
// src/components/layout/Footer.astro
import { sanityClient } from '@/lib/sanity';

export interface Props {
  lang: 'id' | 'en';
}

const { lang } = Astro.props;

// --- Data Fetching ---
let siteSettings: any = null;
let contactData: any = null;

try {
  // Menarik data Site Settings dan Contact secara paralel
  [siteSettings, contactData] = await Promise.all([
    sanityClient.fetch(`*[_type == "siteSettings"][0]`),
    sanityClient.fetch(`*[_type == "contactSection"][0]`),
  ]);
} catch (error) {
  console.error('Sanity Footer Fetch Error:', error);
}

// --- Data Processing (Site Settings) ---
const brandName = siteSettings?.brandName || 'FasterUI';
// Fallback text jika description kosong di CMS
const defaultDesc =
  lang === 'id'
    ? 'Siap untuk meningkatkan kehadiran online Anda? Hubungi kami hari ini untuk mendiskusikan proyek Anda dan temukan bagaimana kami dapat mewujudkan visi Anda.'
    : 'Ready to elevate your online presence? Contact us today to discuss your project and discover how we can bring your vision to life.';
const description = siteSettings?.description?.[lang] || defaultDesc;

// --- Data Processing (Contact) ---
const email = contactData?.emailAddress || 'hello@agency.com';
const emailLink = `mailto:${email}`;

const waNumber = contactData?.whatsappNumber || '6281234567890';
const waMsg =
  contactData?.whatsappMessage?.[lang] ||
  (lang === 'id'
    ? 'Halo, saya ingin bertanya lebih lanjut.'
    : 'Hello, I would like to know more.');
const waLink = `https://wa.me/${waNumber}?text=${encodeURIComponent(waMsg)}`;

// --- Localized Navigation Links ---
const navLinks =
  lang === 'id'
    ? [
        { name: 'Beranda', href: '#home' },
        { name: 'Layanan', href: '#services' },
        { name: 'Cara Kerja', href: '#how-it-works' },
        { name: 'Portofolio', href: '#portfolio' },
        { name: 'Templates', href: '#template' },
        { name: 'FAQ', href: '#faq' },
      ]
    : [
        { name: 'Home', href: '#home' },
        { name: 'Services', href: '#services' },
        { name: 'How It Works', href: '#how-it-works' },
        { name: 'Porfolio', href: '#portfolio' },
        { name: 'Templates', href: '#template' },
        { name: 'FAQ', href: '#faq' },
      ];

const currentYear = new Date().getFullYear();
const madeWithLove =
  lang === 'id' ? 'Dibuat dengan cinta oleh' : 'Made with love powered by';
---

<footer class='relative mt-20 md:mt-32 z-20'>
  {/* Aksen Gradient Line di paling bawah (Meniru referensi gambar) */}
  <div
    class='absolute bottom-0 left-0 w-full h-2 bg-gradient-to-r from-rose-400 via-fuchsia-500 to-blue-500 z-30'>
  </div>

  {/* Glassmorphism Background */}
  <div
    class='bg-white/60 backdrop-blur-xl border-t border-white/60 shadow-[0_-8px_32px_rgba(0,0,0,0.02)] pt-16 md:pt-20 pb-10'>
    <div class='container mx-auto px-4 max-w-7xl'>
      {/* Top Section: Brand & Navigation */}
      <div
        class='flex flex-col lg:flex-row justify-between items-start gap-12 lg:gap-8 mb-16'>
        {/* Left: Brand & Description */}
        <div class='max-w-md'>
          {/* Logo Brand */}
          <a
            href={lang === 'id' ? '/' : '/en/'}
            class='flex items-center gap-2 font-bold text-2xl tracking-tight text-slate-900 hover:opacity-80 transition-opacity mb-6 inline-flex'>
            <div class='bg-slate-900 text-white p-1 rounded-md'>
              {/* Lightning Zap Icon */}
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='20'
                height='20'
                viewBox='0 0 24 24'
                fill='currentColor'
                stroke='none'>
                <path d='M13 2L3 14h9l-1 8 10-12h-9l1-8z'></path>
              </svg>
            </div>
            {brandName}
          </a>

          {/* Short Description */}
          <p class='text-slate-500 leading-relaxed text-base'>
            {description}
          </p>
        </div>

        {/* Right: Nav Links */}
        <nav class='flex flex-wrap gap-6 md:gap-10'>
          {
            navLinks.map((link) => (
              <a
                href={link.href}
                class='text-sm md:text-base font-semibold text-slate-500 hover:text-slate-900 transition-colors'>
                {link.name}
              </a>
            ))
          }
        </nav>
      </div>

      {/* Bottom Section: Copyright & Social/Contact Icons */}
      <div
        class='flex flex-col-reverse md:flex-row justify-between items-center gap-6 pt-8 border-t border-slate-200/60'>
        {/* Left: Copyright & Made with Love */}
        <div class='flex items-center gap-2 text-sm text-slate-500'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='text-slate-400'>
            <path
              d='M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z'
            ></path>
          </svg>
          <p>
            {madeWithLove}
            <strong>{brandName}</strong>. &copy; {currentYear}
          </p>
        </div>

        {/* Right: Contact Icons (WhatsApp & Email) */}
        <div class='flex items-center gap-4'>
          {/* Email Icon */}
          <a
            href={emailLink}
            aria-label='Send Email'
            class='w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-600 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition-all duration-300 shadow-sm'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='18'
              height='18'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'>
              <rect
                width='20'
                height='16'
                x='2'
                y='4'
                rx='2'
              ></rect>
              <path d='m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7'></path>
            </svg>
          </a>

          {/* WhatsApp Icon */}
          <a
            href={waLink}
            target='_blank'
            rel='noopener noreferrer'
            aria-label='Chat on WhatsApp'
            class='w-10 h-10 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-600 hover:bg-green-500 hover:text-white hover:border-green-500 transition-all duration-300 shadow-sm'>
            <svg
              viewBox='0 0 24 24'
              width='18'
              height='18'
              fill='currentColor'>
              <path
                d='M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z'
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
