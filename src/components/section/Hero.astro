---
// src/components/section/Hero.astro
import { Image } from 'astro:assets';
// Gunakan buttonVariants untuk menghindari error <a><Button> yang kita bahas sebelumnya
import { buttonVariants } from '@/components/ui/button';

import heroBackground from '@/assets/hero-bg1.png';

interface Props {
  headline?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  headline = 'Awesome UI Dark <br/> Template for <br/> Webflow Agency',
  ctaText = 'Get in Touch',
  ctaLink = '#contact',
} = Astro.props;
---

<section
  id='home'
  class='relative pt-40 pb-32 md:pt-56 md:pb-40 overflow-hidden flex flex-col justify-center min-h-screen'>
  <div class='absolute inset-0 z-0 pointer-events-none'>
    {/* --- PERBAIKAN CRITICAL LCP --- */}
    <Image
      src={heroBackground}
      alt='Agency Hero Background'
      class='w-full h-full object-cover'
      quality={80}
      decoding='sync'
    />
    <div class='absolute inset-0 bg-slate-50/30'></div>
  </div>

  <div
    class='container mx-auto px-4 flex flex-col items-center text-center relative z-10'>
    <h1
      class='text-5xl md:text-7xl lg:text-[5.5rem] font-extrabold tracking-tight text-slate-900 leading-[1.1] mb-10 text-balance'
      set:html={headline}
    />

    {/* Menggunakan buttonVariants agar struktur HTML valid dan aksesibel */}
    <a
      href={ctaLink}
      class={buttonVariants({
        className:
          'bg-[#1E1E24] hover:bg-black text-white px-10 h-14 text-base font-semibold rounded-2xl shadow-lg transition-transform hover:scale-105 duration-300',
      })}>
      {ctaText}
    </a>
  </div>
</section>
