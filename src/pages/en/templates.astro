---
// src/pages/en/templates.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '@/lib/sanity';

const lang = 'en'; // <-- Ubah ke 'en'

// --- Data Fetching ---
let sectionData: any = null;

try {
  sectionData = await sanityClient.fetch(`*[_type == "templateSection"][0]`);
} catch (error) {
  console.error('Sanity templates Fetch Error:', error);
}

// --- Data Processing & Localization ---
const headline = sectionData?.headline?.[lang] || 'Our Finest Work';
const subheadline =
  sectionData?.subheadline?.[lang] ||
  'Explore the various digital templates we have completed to help our clients achieve their business goals.';

const rawTemplates = sectionData?.templates || [];

const templates = rawTemplates
  .map((template: any, index: number) => ({
    id: template._key || String(index),
    title: template.title || 'Untitled template',
    imageUrl: template.image
      ? urlFor(template.image).width(800).height(600).fit('crop').url()
      : '',
    imageAlt: template.image?.alt || template.title || 'template Screenshot',
    templateUrl: template.templateUrl || null,
  }))
  .filter((p: any) => p.imageUrl);
---

<BaseLayout
  lang={lang}
  title='Portfolio & templates'
  description={subheadline}>
  <div
    class='relative pt-40 md:pt-56 pb-20 md:pb-32 bg-slate-50 min-h-screen overflow-hidden'>
    <div
      class='absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-blue-500/10 blur-[120px] rounded-full pointer-events-none -z-0'>
    </div>

    <div class='container mx-auto px-4 max-w-7xl relative z-10'>
      <div
        class='text-center max-w-3xl mx-auto mb-16 md:mb-24 animate-in fade-in slide-in-from-bottom-8 duration-700'>
        <h1
          class='text-5xl md:text-6xl lg:text-7xl font-extrabold text-slate-900 tracking-tight mb-6 leading-tight'>
          {headline}
        </h1>
        <p
          class='text-lg md:text-xl text-slate-500 leading-relaxed text-balance'>
          {subheadline}
        </p>
      </div>

      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
        {
          templates.length > 0 ? (
            templates.map((template: any, index: number) => (
              <a
                href={template.templateUrl || '#'}
                target={template.templateUrl ? '_blank' : '_self'}
                rel='noopener noreferrer'
                class={`group block h-full animate-in fade-in slide-in-from-bottom-8 duration-700 fill-mode-both`}
                style={`animation-delay: ${index * 100}ms;`}>
                <article class='bg-white rounded-[2rem] p-4 border border-slate-100 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_20px_40px_-15px_rgba(37,99,235,0.15)] hover:border-blue-100 transition-all duration-300 flex flex-col h-full'>
                  <div class='relative aspect-[4/3] rounded-[1.5rem] overflow-hidden mb-5 bg-slate-100'>
                    <img
                      src={template.imageUrl}
                      alt={template.imageAlt}
                      class='w-full h-full object-cover transition-transform duration-700 group-hover:scale-105'
                      loading='lazy'
                    />

                    {template.templateUrl && (
                      <div class='absolute top-4 right-4 w-12 h-12 bg-white/90 backdrop-blur-md rounded-full flex items-center justify-center text-slate-900 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0 shadow-lg'>
                        <svg
                          xmlns='http://www.w3.org/2000/svg'
                          width='20'
                          height='20'
                          viewBox='0 0 24 24'
                          fill='none'
                          stroke='currentColor'
                          stroke-width='2'
                          stroke-linecap='round'
                          stroke-linejoin='round'>
                          <path d='M7 7h10v10' />
                          <path d='M7 17 17 7' />
                        </svg>
                      </div>
                    )}
                  </div>

                  <div class='px-2 pb-2 mt-auto'>
                    <h3 class='text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors duration-300'>
                      {template.title}
                    </h3>
                  </div>
                </article>
              </a>
            ))
          ) : (
            <div class='col-span-full p-20 border-2 border-dashed border-slate-200 rounded-[3rem] text-center text-slate-500 bg-white/50 backdrop-blur-sm'>
              No templates have been published yet.
            </div>
          )
        }
      </div>
    </div>
  </div>
</BaseLayout>
